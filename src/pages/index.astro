---
import Layout from '../components/layout.astro';
---

<Layout title="Home">
  <style>
    /* Scope to the layout component */
    html,
    body {
      font-family: sans-serif;
      /* Choose a clean, modern font */
      background-color: #ffffff27;
      /* White background */
      color: #000000;
      /* Black text */
      margin: 0;
      padding: 0;
      height: 100vh;
      /* Make sure html and body occupy the full height */
      overflow: hidden;
      /* Prevent scrollbars */
    }

    /* Make sure to have full page sizing */
    html {
      height: 100%;
    }

    .astro-root {
      height: 100%;
    }

    .home-centered-header::before {
      content: "";
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url("/images/background.gif");
      background-size: cover;
      background-position: center;
      opacity: 0.5;
      z-index: -1;
    }

    /* Add a semi-transparent overlay */
    .home-centered-header::after {
      content: "";
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(255, 255, 255, 0.869);
      z-index: -1;
    }

    .home-centered-header {
      position: relative;
      display: flex;
      flex-direction: column;
      justify-content: center;
      /* Center the header vertically */
      align-items: center;
      min-height: 100vh;
      width: 100%;
      text-align: center;
      padding: 20px;
      box-sizing: border-box;
      overflow: hidden;
    }

    /* Header Styles */
    .home-header-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      /* Vertically align logo and nav */
      justify-content: center;
      /* Space around items */
      width: 80%;
      /* Or a specific width if needed */
      max-width: 1200px;
      /* Limit width */
      margin: 0 auto;
      /* Center horizontally */
    }

    .logo {
      flex: 0 0 auto;
      /* Don't grow, don't shrink, auto size */
    }

    .logo img {
      max-height: 150px;
      /* Adjust as needed */
      width: auto;
    }

    /* Navigation Styles */
    nav {
      flex: 1 1 auto;
      /* Allow to grow and shrink, auto size */
      text-align: center;
      /* Center nav items */
    }

    .home-nav-list {
      display: flex;
      justify-content: center;
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .home-nav-list li {
      margin: 0 1rem;
    }

    .home-nav-list a {
      color: #000000;
      text-decoration: none;
      font-weight: bold;
      transition: color 0.2s;
    }

    .home-nav-list a:hover,
    .home-nav-list a:focus {
      color: var(--link-hover-color);
      color: red;
      /* Use a CSS variable for hover color */
    }

    /* Footer Styles */
    .footer {
      width: 100%;
      box-sizing: border-box;
      /* Include padding and border in the footer's total width and height */
      text-align: center;
      font-size: 0.75rem;
      padding: 1rem;
      display: flex;
      flex-direction: column;
      /* Stack elements vertically */
      align-items: center;
      /* Center horizontally */
    }

    .footer p {
      margin: 0.2em 0;
      /* Adjust spacing */
    }

    /* Media Queries for Responsive Design */
    @media (max-width: 768px) {
      .home-header-container {
        flex-direction: column;
        /* Stack logo and nav */
        align-items: center;
        /* Center items horizontally */
      }

      .logo img {
        max-height: 100px;
        /* Smaller logo on mobile */
        margin-bottom: 1rem;
        /* Add some spacing */
      }

      nav {
        text-align: center;
        /* Center nav items on mobile */
      }

      .home-nav-list {
        flex-direction: row;
        /* Keep nav items in a row */
        flex-wrap: wrap;
        justify-content: center;
      }

      .home-nav-list li {
        margin: 0.5em 1rem;
        /* Space out nav items */
      }
    }
  </style>
  <div class="home-centered-header">
    <header class="home-header-container">
      <a href="/" class="logo">
        <img src="/images/logo.png" alt="Cliven Streaming Logo" />
      </a>
      <nav>
        <ul class="home-nav-list">
          <li><a href="/services">Services</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </nav>
    </header>
    <footer class="footer">
      <p>Â© {new Date().getFullYear()} Cliven Streaming. All rights reserved.</p>
      <p>
        <a href="/privacy">Privacy Policy</a> | <a href="/terms">Terms of Service</a>
        <br>
        Powered by <a href="https://kflix.me">Kesny Toussaint</a>
      </p>
    </footer>
  </div>
</Layout>